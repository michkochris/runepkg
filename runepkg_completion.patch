+#!/bin/bash
+
+# Bash completion for runepkg
+# This script provides autocompletion for runepkg commands and package names
+
+_runepkg_completions() {
+    local cur=${COMP_WORDS[COMP_CWORD]}
+    local prev=${COMP_WORDS[COMP_CWORD-1]}
+    local words=("${COMP_WORDS[@]}")
+    local cword=$COMP_CWORD
+
+    # Load package list from the config directory
+    local pkglist=()
+    local config_file=$(runepkg --print-config-file 2>/dev/null)
+    if [[ -n "$config_file" ]]; then
+        local config_dir=$(dirname "$config_file")
+        local pkglist_file="$config_dir/pkglist.txt"
+        if [[ -f "$pkglist_file" ]]; then
+            mapfile -t pkglist < "$pkglist_file"
+        fi
+    fi
+    # Fallback to standard locations if dynamic lookup failed
+    if [[ ${#pkglist[@]} -eq 0 ]]; then
+        if [[ -f "${HOME}/.runepkg/pkglist.txt" ]]; then
+            mapfile -t pkglist < "${HOME}/.runepkg/pkglist.txt"
+        elif [[ -f "/etc/runepkg/pkglist.txt" ]]; then
+            mapfile -t pkglist < "/etc/runepkg/pkglist.txt"
+        elif [[ -f "${HOME}/pkglist.txt" ]]; then
+            mapfile -t pkglist < "${HOME}/pkglist.txt"
+        fi
+    fi
+    # Strip carriage returns from package names
+    for i in "${!pkglist[@]}"; do
+        pkglist[i]="${pkglist[i]//$'\r'/}"
+    done
+
+    case "$prev" in
+        -i|--install|-S|--search)
+            # Complete with file paths
+            COMPREPLY=($(compgen -f -- "$cur"))
+            ;;
+        -r|--remove|-s|--status|-L|--list-files)
+            # Complete with package names
+            COMPREPLY=($(compgen -W "${pkglist[*]}" -- "$cur"))
+            ;;
+        *)
+            # Complete with options
+            local options="-i --install -r --remove -l --list -s --status -L --list-files -S --search -v --verbose -f --force --version -h --help --print-config --print-config-file --update-pkglist"
+            COMPREPLY=($(compgen -W "$options" -- "$cur"))
+            ;;
+    esac
+}
+
+complete -F _runepkg_completions runepkg